<html>
<head></head>
<body>
  <table id="bookmarks">
    <tr>
      <td style="width:40px; padding-top:10px; padding-bottom:10px">
        <form style="margin-block-end:0px" action='/bookmarks/new'>
          <input type='submit' id='add' value='Add'>
        </form>
      </td>
    </tr>
  <% @bookmarks.each do |bookmark| %>
    <tr>
      <td style="width:40px; padding-top:10px; padding-bottom:10px">
        <form style="margin-block-end:0px" action='/bookmarks/delete' method='post'>
          <input type='hidden' name='id' value='<%= bookmark.id %>'>
          <input type='submit' name="del" id="<%= 'del_' + bookmark.id.to_s %>" value='Del'>
        </form>
      </td>
      <td style="width:40px; padding-top:10px; padding-bottom:10px">
        <form style="margin-block-end:0px" action='/bookmarks/update' method='get'>
          <input type='hidden' name='id' value='<%= bookmark.id %>'>
          <input type='submit' name='edit' id="<%= 'edit_' + bookmark.id %>" value='Edit'>
        </form>
      </td>
      <td style="padding-top:10px; padding-bottom:10px">
        <a href='<%= bookmark.url %>'><%= bookmark.title %></a>
      </td>
    </tr>
  <% end %>
  </table>
</body>
</html>
