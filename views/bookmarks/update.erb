    <label> Title: </label>
    <input type="text" name="title" placeholder=<%=@bookmark.title%>>
    <label> URL: </label>
    <input type="text" name="url" placeholder=<%=@bookmark.url%>>
    <input type='submit' value='Submit'>
</form>